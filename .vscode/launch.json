    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "--help",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accountfactory.js",
            "args": [
                "--help"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "list-accounts",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accountfactory.js",
            "args": [
                "list-accounts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "generate-skeleton",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accountfactory.js",
            "args": [
                "generate-skeleton"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "create-accounts --overwrite",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accountfactory.js",
            "args": [
                "create-accounts",
                "--overwrite",
                "true",
                "--skipconfirmation",
                "true"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "setup-aws-profiles",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accountfactory.js",
            "args": [
                "setup-aws-profiles"
            ]
        }

    ]
}